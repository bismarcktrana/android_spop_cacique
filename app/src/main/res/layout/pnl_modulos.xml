                android:layout_marginLeft="@dimen/button_icon_margin"
                android:layout_marginTop="@dimen/button_icon_margin"
                android:layout_marginBottom="@dimen/button_icon_margin"
                android:src="@drawable/ic_action_reporte"
                app:srcCompat="@drawable/ic_action_reporte"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/button_icon_margin"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/item_libre"
                android:textColor="@color/zebra_blue"
